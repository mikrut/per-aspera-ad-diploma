<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context="ru.mail.park.chat.activities.DialogActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/messagesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        tools:listitem="@layout/element_message_right"
        android:layout_above="@+id/messageInputPlate" />

    <LinearLayout
        android:elevation="6dp"
        android:orientation="horizontal"
        android:id="@+id/messageInputPlate"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="bottom">

        <ImageButton
            android:contentDescription="Insert emoticon"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/insertEmoticon"
            android:src="@drawable/ic_insert_emoticon_black_24dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <EditText
            android:id="@+id/inputMessage"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Message" />

        <ImageButton
            android:contentDescription="Send message"
            android:layout_marginLeft="-40dp"
            android:layout_marginStart="-40dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/sendMessage"
            android:src="@drawable/ic_send_black_24dp" />
    </LinearLayout>

</RelativeLayout>
